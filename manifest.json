{
  "name": "NextPage",
  "description": "Open next page in article/results page/forum",
  "version": "1.2",
  "short_name": "Show next page",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "icons": {
    "128": "forward.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_title": "Next page",
    "default_icon": "arrow-right-c.png"
  },
  "commands": {
    "open-next-page": {
      "description": "Open Next Page",
      "suggested_key": {
        "default": "Ctrl+Right"
      }
    }
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["element_searcher.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}